//Q30: Write a program to reverse a given number.
#include<stdio.h>
void main(){
  int n,reverse=0,i=1;
  char choice;
  do{
  printf("enter digits of number you want\n");
  scanf("%d",&n);
  reverse+=i*n;
  i*=10;
  printf("Do you want to enter another number? (y/n): ");
  scanf(" %c", &choice);  
  }while(choice =='y'|| choice =='Y');
  printf("%d\n",reverse);
}
