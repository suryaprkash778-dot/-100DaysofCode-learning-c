//Q90: Toggle case of each character in a string.
#include <stdio.h>

int main() {
    char str[1000];

    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);

    for (int i = 0; str[i] != '\0'; i++) {
        char ch = str[i];

        if (ch >= 'A' && ch <= 'Z') {
            str[i] = ch + ('a' - 'A');  // Convert to lowercase
        } else if (ch >= 'a' && ch <= 'z') {
            str[i] = ch - ('a' - 'A');  // Convert to uppercase
        }
    }
    printf("%s\n", str);

    return 0;
}
