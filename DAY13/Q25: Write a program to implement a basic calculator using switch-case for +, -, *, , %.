//Q25: Write a program to implement a basic calculator using switch-case for +, -, *, /, %.

#include<stdio.h>
int main()
{ int num1,num2;
  char operation;
  printf("enter two numbers and operation you want to perform, from given list\n+(addition)\n-(subtraction)\n*(multiplication)\n/(division)\n%%(remainder)\n");
  scanf("%d %d %c",&num1,&num2,&operation);
  switch(operation){
    case '+':printf("%d",num1 + num2);
             break;
    case '-':printf("%d",num1 - num2);
             break;
    case '*':printf("%d",num1 * num2);
             break;
    case '/':printf("%.2f",(float)num1 / num2);
             break;
    case '%':printf("%d",num1 % num2);
             break;
    
  }
   
    return 0;
      
}

